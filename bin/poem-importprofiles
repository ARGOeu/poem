#!/bin/sh

RUNASUSER="apache"
SITEPACK=$(python -c "from distutils.sysconfig import get_python_lib; print(get_python_lib())")
DBPATH=$(python -c "from Poem import settings; print settings.DATABASES['default']['NAME']")
URLDEF="http://mon.egi.eu/poem/api/0.2/json/profiles/"

if [ "$1" = "--url" ]
then
	url="$2"
	shift 2
else
	url=$URLDEF
fi

for prof in $@
do
	su -s /bin/sh - $RUNASUSER -c \
	"export DJANGO_SETTINGS_MODULE=Poem.settings && \
	django-admin import_profiles --url $url $prof" 
done	

